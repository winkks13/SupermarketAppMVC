<%- include('partials/head', { pageTitle, active: 'users' }) %>

<section class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h2 class="h4 mb-4">Edit user</h2>
                <form action="/admin/users/<%= user.id %>" method="POST" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="username">Full name</label>
                        <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="contact">Contact number</label>
                        <input type="text" class="form-control" id="contact" name="contact" value="<%= user.contact %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="password">Password <span class="text-muted">(leave blank to keep current)</span></label>
                        <input type="password" class="form-control" id="password" name="password" minlength="6" placeholder="••••••">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="role">Role</label>
                        <select class="form-select" id="role" name="role">
                            <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>Shopper</option>
                            <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label" for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="address" value="<%= user.address %>" required>
                    </div>
                    <% if (isSelf) { %>
                        <div class="col-12">
                            <div class="alert alert-warning mb-0">
                                You are editing your own account. Changes will apply immediately.
                            </div>
                        </div>
                    <% } %>
                    <div class="col-12 d-flex justify-content-between">
                        <a href="/admin/users" class="btn btn-outline-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
