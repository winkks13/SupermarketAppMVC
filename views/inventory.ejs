<%- include('partials/head', { pageTitle, active: 'inventory' }) %>

<section class="d-flex flex-wrap justify-content-between align-items-end mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">Inventory overview</h1>
        <p class="text-muted mb-0">Monitor every SKU and keep stocks healthy.</p>
    </div>
    <a href="/products/new" class="btn btn-primary">Add product</a>
</section>

<section class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted text-uppercase small mb-1">Total products</p>
                <h3 class="fw-bold"><%= stats?.totalProducts || 0 %></h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted text-uppercase small mb-1">Units on hand</p>
                <h3 class="fw-bold"><%= stats?.totalUnits || 0 %></h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted text-uppercase small mb-1">Low stock</p>
                <h3 class="fw-bold text-danger"><%= stats?.lowStock || 0 %></h3>
            </div>
        </div>
    </div>
</section>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% if (!products.length) { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No products yet.</td>
                    </tr>
                <% } %>
                <% products.forEach(product => { %>
                    <tr>
                        <td class="d-flex align-items-center gap-3">
                            <img src="/images/<%= product.image %>" class="inventory-thumb rounded" alt="<%= product.productName %>">
                            <div>
                                <strong><%= product.productName %></strong><br>
                                <small class="text-muted">#<%= product.id %></small>
                            </div>
                        </td>
                        <td><span class="badge bg-light text-dark"><%= product.category || 'General' %></span></td>
                        <td>$<%= Number(product.price).toFixed(2) %></td>
                        <td>
                            <% if (product.quantity <= 3) { %>
                                <span class="badge bg-danger">Low (<%= product.quantity %>)</span>
                            <% } else { %>
                                <span class="badge bg-success"><%= product.quantity %></span>
                            <% } %>
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a href="/products/<%= product.id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
                                <form action="/products/<%= product.id %>/delete" method="POST">
                                    <button class="btn btn-outline-danger btn-sm" type="submit" onclick="return confirm('Delete this product?')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %>

