<%- include('partials/head', { pageTitle, active: 'shop' }) %>

<section class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form class="row g-3 align-items-end" action="/shop" method="GET">
            <div class="col-md-4">
                <label class="form-label text-muted text-uppercase small">Search products</label>
                <input type="text" class="form-control" name="search" value="<%= filters.search %>" placeholder="e.g. apples">
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted text-uppercase small">Category</label>
                <select class="form-select" name="category">
                    <option value="all">All categories</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category %>" <%= filters.category === category ? 'selected' : '' %>><%= category %></option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label text-muted text-uppercase small">Sort by price</label>
                <select class="form-select" name="sort">
                    <% (sortOptions || []).forEach(option => { %>
                        <% const selected = (filters.sort || 'default') === option.id ? 'selected' : '' %>
                        <option value="<%= option.id %>" <%= selected %>><%= option.label %></option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-1">
                <button class="btn btn-primary w-100" type="submit">Filter</button>
            </div>
        </form>
    </div>
</section>

<section class="row g-4">
    <% if (!products.length) { %>
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center text-muted">
                    No products found. Try removing filters.
                </div>
            </div>
        </div>
    <% } %>
    <% products.forEach(product => { %>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <img src="/images/<%= product.image %>" class="card-img-top product-thumb" alt="<%= product.productName %>">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge bg-light text-dark"><%= product.category || 'General' %></span>
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-bold">$<%= Number(product.price).toFixed(2) %></span>
                            <form action="/products/<%= product.id %>/wishlist/<%= product.isWishlisted ? 'remove' : 'add' %>" method="POST" class="m-0">
                                <button class="btn btn-outline-secondary btn-sm" type="submit" aria-label="Toggle wishlist">
                                    <%= product.isWishlisted ? '♥' : '♡' %>
                                </button>
                            </form>
                        </div>
                    </div>
                    <h5 class="card-title"><%= product.productName %></h5>
                    <% const avg = Number(product.rating || 0).toFixed(1) %>
                    <% const fullStars = Math.round(product.rating || 0) %>
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <div class="text-warning small">
                            <% for(let s = 1; s <= 5; s++) { %>
                                <span><%= s <= fullStars ? '★' : '☆' %></span>
                            <% } %>
                        </div>
                        <span class="small text-muted"><%= avg %> (<%= product.reviewCount || 0 %>)</span>
                    </div>
                    <p class="card-text text-muted small mb-3">
                        <% if (product.quantity <= 3) { %>
                            <span class="text-danger fw-semibold">Only <%= product.quantity %> left</span>
                        <% } else { %>
                            <span><%= product.quantity %> unit(s) available</span>
                <% } %>
            </p>
            <div class="mt-auto">
                <form action="/cart/items/<%= product.id %>" method="POST" class="d-flex gap-2 align-items-center">
                    <div class="input-group quantity-control" data-stock="<%= product.quantity %>">
                        <button class="btn btn-outline-secondary qty-btn" type="button" data-change="-1" <%= product.quantity === 0 ? 'disabled' : '' %>>-</button>
                        <input
                            type="number"
                            class="form-control text-center qty-input"
                            name="quantity"
                            value="<%= product.quantity ? 1 : 0 %>"
                            min="1"
                            max="<%= Math.max(product.quantity, 1) %>"
                            inputmode="numeric"
                            <%= product.quantity === 0 ? 'disabled' : '' %>
                        >
                        <button class="btn btn-outline-secondary qty-btn" type="button" data-change="1" <%= product.quantity === 0 ? 'disabled' : '' %>>+</button>
                    </div>
                    <button class="btn btn-primary flex-grow-1" type="submit" <%= product.quantity === 0 ? 'disabled' : '' %>>
                        <%= product.quantity === 0 ? 'Out of stock' : 'Add to cart' %>
                    </button>
                </form>
                <a href="/products/<%= product.id %>" class="btn btn-link text-decoration-none w-100 mt-2">See details</a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</section>

<script>
    document.querySelectorAll('.quantity-control').forEach(control => {
        const stock = Number(control.dataset.stock) || 0
        const input = control.querySelector('.qty-input')
        const buttons = control.querySelectorAll('.qty-btn')

        if (stock < 1) {
            buttons.forEach(btn => btn.disabled = true)
            input.disabled = true
            input.value = 0
            return
        }

        const clamp = () => {
            let value = Number(input.value) || 1
            value = Math.min(stock, Math.max(1, value))
            input.value = value
            buttons.forEach(btn => {
                const delta = Number(btn.dataset.change)
                btn.disabled = (delta < 0 && value <= 1) || (delta > 0 && value >= stock)
            })
        }

        buttons.forEach(btn => {
            btn.addEventListener('click', () => {
                const delta = Number(btn.dataset.change) || 0
                input.value = Number(input.value || 1) + delta
                clamp()
            })
        })

        input.addEventListener('input', clamp)
        clamp()
    })
</script>

<%- include('partials/footer') %>

