<%- include('partials/head', { pageTitle }) %>

<section class="hero-section rounded-4 p-5 mb-4">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <span class="badge bg-warning text-dark mb-3">Fresh arrivals daily</span>
            <h1 class="display-5 fw-bold text-white">Everything you need for the week.</h1>
            <p class="lead text-white-50">Shop curated groceries, track inventory and stay on top of every checkout with our refreshed dashboard experience.</p>
            <div class="d-flex gap-3">
                <% if (currentUser) { %>
                    <a class="btn btn-light btn-lg text-primary" href="/shop">Start shopping</a>
                    <% if (currentUser.role === 'admin') { %>
                        <a class="btn btn-outline-light btn-lg" href="/inventory">Manage inventory</a>
                    <% } %>
                <% } else { %>
                    <a class="btn btn-light btn-lg text-primary" href="/register">Create account</a>
                    <a class="btn btn-outline-light btn-lg" href="/login">Sign in</a>
                <% } %>
            </div>
        </div>
        <div class="col-lg-6 text-center text-lg-end mt-4 mt-lg-0">
            <img src="/images/broccoli2.jpg" class="img-fluid rounded-4 shadow" alt="Fresh groceries">
        </div>
    </div>
</section>

<% if (currentUser && currentUser.role === 'admin' && stats) { %>
    <section class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase small mb-1">Products</p>
                    <h3 class="fw-bold"><%= stats.totalProducts %></h3>
                    <p class="text-muted mb-0">items currently available</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase small mb-1">Low stock alerts</p>
                    <h3 class="fw-bold text-danger"><%= stats.lowStock %></h3>
                    <p class="text-muted mb-0">items to replenish soon</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase small mb-1">Units on hand</p>
                    <h3 class="fw-bold"><%= stats.totalUnits %></h3>
                    <p class="text-muted mb-0">pieces across categories</p>
                </div>
            </div>
        </div>
    </section>
<% } %>

<section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">Trending this week</h2>
        <% if (currentUser) { %>
            <a href="/shop" class="text-decoration-none">See all -></a>
        <% } %>
    </div>
    <div class="row g-4">
        <% if (!featured || !featured.length) { %>
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center text-muted">
                        No featured products yet. Add a product from the inventory dashboard.
                    </div>
                </div>
            </div>
        <% } %>
        <% featured.forEach(product => { %>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <img src="/images/<%= product.image %>" class="card-img-top product-thumb" alt="<%= product.productName %>">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-light text-dark"><%= product.category || 'General' %></span>
                            <span class="fw-bold">$<%= Number(product.price).toFixed(2) %></span>
                        </div>
                        <h5 class="card-title"><%= product.productName %></h5>
                        <p class="card-text text-muted">Stock: <%= product.quantity %> unit(s)</p>
                        <div class="mt-auto">
                            <% if (currentUser) { %>
                                <a href="/products/<%= product.id %>" class="btn btn-outline-primary w-100">View product</a>
                            <% } else { %>
                                <a href="/login" class="btn btn-outline-primary w-100">Login to shop</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>

<%- include('partials/footer') %>

