<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= pageTitle ? `${pageTitle} | WinksMart` : 'WinksMart' %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <% const navActive = typeof active !== 'undefined' ? active : '' %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">WinksMart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if (currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= (navActive === 'shop') ? 'active' : '' %>" href="/shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= (navActive === 'wishlist') ? 'active' : '' %>" href="/wishlist">Wishlist</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/orders/history">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= (navActive === 'account') ? 'active' : '' %>" href="/profile">Account</a>
                        </li>
                        <% if (currentUser.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link <%= (navActive === 'inventory') ? 'active' : '' %>" href="/inventory">Inventory</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/orders/manage">Manage Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= (navActive === 'users') ? 'active' : '' %>" href="/admin/users">Users</a>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <% if (currentUser) { %>
                        <a class="btn cart-button position-relative" href="/wallet" aria-label="Wallet">
                            <i class="bi bi-wallet2 fs-5"></i>
                        </a>
                        <span class="text-white small">$<%= Number(currentUser.walletBalance || 0).toFixed(2) %></span>
                        <a class="btn cart-button position-relative" href="/cart" aria-label="Cart">
                            <i class="bi bi-cart3 fs-5"></i>
                            <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill"><%= cartCount %></span>
                        </a>
                        <form method="POST" action="/logout" class="m-0">
                            <button class="btn btn-light text-primary" type="submit">Logout</button>
                        </form>
                    <% } else { %>
                        <a class="btn btn-link text-white" href="/register">Register</a>
                        <a class="btn btn-light text-primary" href="/login">Login</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
    <main class="py-4">
        <div class="container">
            <%- include('./flash') %>
