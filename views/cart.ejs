<%- include('partials/head', { pageTitle }) %>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h4 mb-0">Your cart</h2>
                    <% if (cart.items.length) { %>
                        <form action="/cart/clear" method="POST">
                            <button class="btn btn-link text-danger text-decoration-none p-0" type="submit">Clear cart</button>
                        </form>
                    <% } %>
                </div>
                <% if (!cart.items.length) { %>
                    <p class="text-muted text-center my-5">Your cart is empty. Add something tasty!</p>
                <% } else { %>
                    <div class="list-group list-group-flush">
                        <% cart.items.forEach(item => { %>
                            <div class="list-group-item py-3">
                                <div class="d-flex align-items-center gap-3">
                                    <img src="/images/<%= item.image %>" class="cart-thumb rounded" alt="<%= item.productName %>">
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1"><%= item.productName %></h5>
                                        <p class="text-muted small mb-2">$<%= Number(item.price).toFixed(2) %> each</p>
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <form class="d-flex align-items-center gap-2" action="/cart/items/<%= item.id %>/update" method="POST">
                                                <% const stock = Number(item.available ?? item.quantity ?? 0) %>
                                                <% const initialQty = Math.max(1, Math.min(Number(item.quantity) || 1, stock || Number(item.quantity) || 1)) %>
                                                <div class="input-group cart-qty-control" data-stock="<%= stock %>">
                                                    <button class="btn btn-outline-secondary btn-sm cart-qty-btn" type="button" data-change="-1" <%= stock <= 0 ? 'disabled' : '' %>>-</button>
                                                    <input
                                                        type="number"
                                                        class="form-control form-control-sm text-center cart-qty-input"
                                                        name="quantity"
                                                        value="<%= stock <= 0 ? 0 : initialQty %>"
                                                        min="1"
                                                        max="<%= Math.max(stock || 1, 1) %>"
                                                        inputmode="numeric"
                                                        <%= stock <= 0 ? 'disabled' : '' %>
                                                    >
                                                    <button class="btn btn-outline-secondary btn-sm cart-qty-btn" type="button" data-change="1" <%= stock <= 0 ? 'disabled' : '' %>>+</button>
                                                </div>
                                                <button class="btn btn-outline-secondary btn-sm" type="submit" <%= stock <= 0 ? 'disabled' : '' %>>Update</button>
                                            </form>
                                            <form action="/cart/items/<%= item.id %>/delete" method="POST">
                                                <button class="btn btn-link text-danger btn-sm text-decoration-none" type="submit">Remove</button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <p class="fw-bold mb-0">$<%= (item.price * item.quantity).toFixed(2) %></p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h3 class="h5 mb-3">Order summary</h3>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Subtotal</span>
                    <strong>$<%= cart.totals.subtotal.toFixed(2) %></strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Tax</span>
                    <strong>$<%= cart.totals.tax.toFixed(2) %></strong>
                </div>
                <hr>
                <div class="d-flex justify-content-between mb-4">
                    <span>Total</span>
                    <strong class="fs-4">$<%= cart.totals.total.toFixed(2) %></strong>
                </div>
                <a class="btn btn-primary w-100 <%= cart.items.length ? '' : 'disabled' %>" href="/checkout">
                    Proceed to checkout
                </a>
                <a class="btn btn-link w-100 mt-2" href="/shop">Continue shopping</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.cart-qty-control').forEach(control => {
        const stock = Number(control.dataset.stock) || 0
        const input = control.querySelector('.cart-qty-input')
        const buttons = control.querySelectorAll('.cart-qty-btn')

        if (stock <= 0) {
            input.value = 0
            buttons.forEach(btn => btn.disabled = true)
            return
        }

        const clamp = () => {
            let value = Number(input.value) || 1
            value = Math.min(stock, Math.max(1, value))
            input.value = value
            buttons.forEach(btn => {
                const delta = Number(btn.dataset.change)
                btn.disabled = (delta < 0 && value <= 1) || (delta > 0 && value >= stock)
            })
        }

        buttons.forEach(btn => {
            btn.addEventListener('click', () => {
                const delta = Number(btn.dataset.change) || 0
                input.value = Number(input.value || 1) + delta
                clamp()
            })
        })

        input.addEventListener('input', clamp)
        clamp()
    })
</script>

<%- include('partials/footer') %>

